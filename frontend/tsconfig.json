{
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es6",
		"jsx": "react",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"paths": {
			"@welliver.me/frontend/*": ["src/*"]
		}
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"./src/**/*"
	]
}